@model IEnumerable<FacturadorApi.Model.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RazonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CUIT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deshabilitado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RazonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CUIT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deshabilitado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cli_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cli_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cli_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
